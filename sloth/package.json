{
  "name": "sloth",
  "version": "0.0.1",
  "license": "MIT",
  "dependencies": {
    "sm": "file:../sm",
    "sc": "file:../sc"
  },
  "devDependencies": {
    "jest": "^28.1.2"
  },
  "scripts": {
    "lint": "npx eslint .",
    "test": "npx jest"
  },
  "jest": {
    "roots": ["./test"],
    "testEnvironment": "node",
    "verbose": true
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "commonjs": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "indent": ["error", 2],
      "linebreak-style": ["error", "unix"],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "space-before-function-paren": ["error", "never"]
    },
    "globals": {
      "__dirname": "readonly",
      "process": "readonly",
      "jest": "readonly",
      "describe": "readonly",
      "it": "readonly",
      "expect": "readonly",
      "beforeEach": "readonly"
    }
  }
}
