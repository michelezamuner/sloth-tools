{
  "name": "sabia",
  "version": "0.0.1",
  "license": "MIT",
  "bin": "bin/run",
  "engines": {
    "node": ">=21.0.0"
  },
  "devDependencies": {
    "eslint": "^7.31.0",
    "jest": "^30.0.0"
  },
  "scripts": {
    "lint": "npx eslint .",
    "debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand",
    "test": "npx jest --detectOpenHandles",
    "coverage": "npx jest --coverage"
  },
  "jest": {
    "roots": [
      "./src",
      "./test"
    ],
    "testEnvironment": "node",
    "maxWorkers": "50%",
    "verbose": true,
    "coverageDirectory": "/tmp",
    "coveragePathIgnorePatterns": [],
    "coverageReporters": [
      "text"
    ],
    "bail": true,
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "function": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "globals": {
      "randomPicks": 3,
      "randomBase": 2
    }
  },
  "eslintConfig": {
    "env": {
      "browser": false,
      "commonjs": true,
      "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 12
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ]
    },
    "globals": {
      "__dirname": "readonly",
      "process": "readonly",
      "jest": "readonly",
      "describe": "readonly",
      "it": "readonly",
      "expect": "readonly",
      "beforeEach": "readonly",
      "randomPicks": "readonly",
      "randomBase": "readonly"
    }
  }
}
